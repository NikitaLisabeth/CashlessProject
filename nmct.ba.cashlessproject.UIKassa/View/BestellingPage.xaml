            </Grid.ColumnDefinitions>
            <ListBox Style="{StaticResource ListboxStyle}" SelectedItem="{Binding SelectedProduct}" ItemsSource="{Binding Products}" DisplayMemberPath="ProductName" Grid.ColumnSpan="3"/>
