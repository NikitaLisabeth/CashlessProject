<UserControl x:Class="nmct.ba.cashlessproject.UIKlant.View.PageScanKaart"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:nmct.ba.cashlessproject.UIKlant.ViewModel"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="350" d:DesignWidth="525">

    <UserControl.DataContext>
        <vm:PageScanKaartVM/>
    </UserControl.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="68*"/>
            <ColumnDefinition Width="374*"/>
            <ColumnDefinition Width="83*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="56*"/>
            <RowDefinition Height="46*"/>
            <RowDefinition Height="195*"/>
            <RowDefinition Height="53*"/>
        </Grid.RowDefinitions>
        <TextBlock Style="{StaticResource TextBlockStyle2}" Grid.Row="1" Grid.Column="1" FontSize="20" VerticalAlignment="Center" Text="Scan uw ID kaart:" />
        <Button Style="{StaticResource ButtonStyle}" Command="{Binding ScanCommand}" Content="Scan" Grid.Column="1" Grid.Row="2" Margin="0,10" FontSize="30"/>
    </Grid>
</UserControl>
